<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>E-Commerce</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }
        header {
            background-color: #333;
            color: white;
            padding: 10px 0;
            text-align: center;
        }
        .products {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
            margin: 20px;
        }
        .product {
            background-color: white;
            border: 1px solid #ddd;
            padding: 20px;
            width: 250px;
            text-align: center;
        }
        .product img {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }
        footer {
            background-color: #333;
            color: white;
            text-align: center;
            padding: 10px 0;
            position: fixed;
            width: 100%;
            bottom: 0;
        }
    </style>
</head>
<body>

    <!-- Header Section -->
    <header>
        <h1>Welcome to Our E-Commerce Store</h1>
    </header>

    <!-- Products Section -->
    <section>
        <h2>Our Products</h2>
        <div class="products">
            <% if (products && products.length > 0) { %>
                <% products.forEach(product => { %>
                    <div class="product">
                        <img src="<%= product.image || '/default.jpg' %>" alt="<%= product.name %>">
                        <h3><%= product.name %></h3>
                        <p>$<%= product.price.toFixed(2) %></p>
                        <p><%= product.description || 'No description available' %></p>
                    </div>
                <% }); %>
            <% } else { %>
                <p>No products found.</p>
            <% } %>
        </div>
    </section>

    <!-- Footer Section -->
    <footer>
        <p>&copy; 2024 E-Commerce Store</p>
    </footer>

</body>
</html>
